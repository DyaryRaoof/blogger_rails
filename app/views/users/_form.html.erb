<div class="row justify-content-center">
    <div class="col-8 p-3 bg-info rounded-3 text-white">
        <div class="m-3">
    <%= form_with model: @user do |form| %>
       <%= render "shared/errors", obj: @user%>
        <div class="row">
            <div class="col-2">
                 <%= form.label :username, class: "form-label" %>
            </div>
            <div class="col-10">
                <%= form.text_field :username,class: "form-control shadow-lg", placeholder: "Enter a User Name"  %>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-2">
                <%= form.label :email, class: "form-label"  %>
            </div>
            <div class="col-10">
                <%= form.email_field :email,class: "form-control shadow-lg" , placeholder: "Enter Your Email"%>
            </div>
        </div>
          <div class="row mt-3">
            <div class="col-2">
                <%= form.label :password, class: "form-label"  %>
            </div>
            <div class="col-10">
                <%= form.password_field :password,class: "form-control shadow-lg" , placeholder: "Choose Your Password"%>
            </div>
        </div>
        <div class="text-center mt-3">
           <%= form.submit (@user.new_record? ? "Sign up" : "Update Account"), class: " btn btn-outline-light btn-large btn-lg" %>
        </div>
    <% end %>
</div>
    </div>
</div>