<h1 class="text-center m-2"><%=@user.username %></h1>
<%=gravitar_for(@user, size: 200)%>
 <% if logged_in? &&  @user == current_user %>
  <div class="d-flex justify-content-center mt-3">
    <%= link_to "Edit Profile", edit_user_path, class: "btn btn-outline-info"%>
  </div>
<%end%>

<h3 class="text-center m-2">Articles</h3>
<%= render "shared/pagination", obj: @articles%>
<%@articles.each do |a|%>
  <%= render "articles/card", article: a%>
<% end %>
