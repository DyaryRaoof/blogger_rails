<h1 class="text-center m-2">Login to Blogger</h1>

<div class="row justify-content-center">
    <div class="col-8 p-3 bg-info rounded-3 text-white">
        <div class="m-3">
    <%= form_with scope: :session, url: login_path do |form| %>
        <div class="row mt-3">
            <div class="col-2">
                <%= form.label :email, class: "form-label"  %>
            </div>
            <div class="col-10">
                <%= form.email_field :email,class: "form-control shadow-lg" , placeholder: "Enter Your Email"%>
            </div>
        </div>
          <div class="row mt-3">
            <div class="col-2">
                <%= form.label :password, class: "form-label"  %>
            </div>
            <div class="col-10">
                <%= form.password_field :password,class: "form-control shadow-lg" , placeholder: "Enter Your Password"%>
            </div>
        </div>
        <div class="text-center mt-3">
           <%= form.submit "login", class: " btn btn-outline-light btn-large btn-lg" %>
        </div>
    <% end %>
</div>
    </div>
</div>