<h1 class="text-center m-2">Create Category</h1>
<div class="row justify-content-center">
    <div class="col-8 p-3 bg-info rounded-3 text-white">
        <div class="m-3">
    <%= form_with model: @category do |form| %>
       <%= render "shared/errors", obj: @category%>
        <div class="row">
            <div class="col-2">
                 <%= form.label :name, "Category Name" , class: "form-label" %>
            </div>
            <div class="col-10">
                <%= form.text_field :name,class: "form-control shadow-lg", placeholder: "Enter Name"  %>
            </div>
        </div>
        <div class="text-center mt-3">
           <%= form.submit "create", class: " btn btn-outline-light btn-large btn-lg" %>
        </div>
    <% end %>
</div>
    </div>
</div>